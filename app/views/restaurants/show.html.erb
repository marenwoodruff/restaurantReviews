<div class="row">
  <div class="col">
    <%= image_tag @restaurant.image_url, height: '200', width: '300' %>

    <h1>
      <%= @restaurant.name %>
    </h1>

    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @restaurant.phone %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= link_to @restaurant.website, @restaurant.website, target: '_blank', rel: 'noopener' %>
    </p>
  </div>

  <div class="col">
    <h3>Reviews</h3>
    <% if @reviews.blank? %>
      <h3>No reviews yet. Be the first to write one!</h3>
    <% else %>
      <% @reviews.each do |review| %>
        <p><%= review.rating %></p>
        <p><%= review.comment %></p>
      <% end %>
    <% end %>
    <div>
      <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class: "btn btn-raised button-margin" %>
    </div>
  </div>
</div>

<div class="margin">
  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
  <%= link_to 'Back', restaurants_path, class: "btn btn-link" %>
</div>
