<%= image_tag @restaurant.image_url, height: '200', width: '300' %>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone %>
</p>

<p>
  <strong>Website:</strong>
  <%= @restaurant.website %>
</p>

<div>
  <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class: "btn btn-raised" %>
</div>

<div>
  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
  <%= link_to 'Back', restaurants_path, class: "btn btn-link" %>
</div>
